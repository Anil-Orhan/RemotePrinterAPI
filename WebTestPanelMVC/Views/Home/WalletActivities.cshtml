@model AllListModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="row  ">
    
    <div class="col-12 m-1 p-2"><h1 class="display-4 text-center fs-5 fw-bold">Cuzdan Hareketleri Tablosu </h1>
        <table class="table table-striped table-bordered table-dark table-hover m-3 p-2">
            <thead>
            <tr>
                   
                <th scope="col">ID</th>
                <th scope="col">Kullanıcı ID </th>
                <th scope="col"> Bakiye</th>
                <th scope="col"> Eski Bakiye</th>
                <th scope="col"> Yeni Bakiye</th>
                <th scope="col"> İşlem Tipi</th>

             
                

            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.WalletActivities)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserId</td>
                    <td>@item.Amount</td>
                    <td>@item.PreviousBalance</td>
                    <td>@item.NewBalance</td>
                    <td>@item.OperationType</td>

                   
                    
                   
                  
                   

                

                </tr>
            }
       
            </tbody>
        </table>
    
    </div>


</div>

