@model AllListModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@*FILES TABLE*@
<div class="row">
<div class="col-10"><h1 class="display-1 text-center fs-6 fw-bold mt-5">Dosyalar</h1>
       
        <table  class="table table-bordered table-dark table-hover fs-6  p-2">
            <thead>
            <tr style="font-size: smaller">
               
                <th scope="col">ID</th>
                <th scope="col">Kullanıcı ID</th>
                <th scope="col">Dosya URL</ </th>
                <th scope="col">Cloud URL </th>
                <th scope="col">Dosya Adı </th>
                <th scope="col">Uzantısı </th>
                <th scope="col">Boyut </th>
                <th scope="col">Tarih </th>
                <th scope="col">Operayon ID </th>
              
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Files)
            {
                <tr style="font-size:xx-small">
                   
                    <td>@item.Id</td>
                    <td>@item.UserId</td>
                    <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;">@item.FileUrl</td>
                    <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;">@item.CloudUrl</td>
                    <td>@item.FileName</td>
                    <td>@item.FileExtension</td>
                    <td>@item.FileSize</td>
                    <td>@item.CreateDate</td>
                    <td>@item.OperationId</td>
                    


                    


                </tr>
            }
       
            </tbody>
        </table>
        

</div></div>