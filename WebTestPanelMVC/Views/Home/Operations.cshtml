@model AllListModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="row">
    
    <div class="col-12 m-1 p-2"><h1 class="display-4 text-center fs-5 fw-bold">Operations</h1>
        <table class="table table-striped table-bordered table-dark  table-hover m-3 p-2">
            <thead>
            <tr>
                   
                <th scope="col">ID</th>
                <th scope="col">USER ID</th>
                <th scope="col">OPERATION DATE </th>
                <th scope="col">OPTIONS ID </th>
                <th scope="col">TOTAL AMOUNT</th>
             
                

            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Operations)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserId</td>
                    <td>@item.OperationTime</td>
                    <td>@item.OptionId</td>
                    <td>@item.TotalAmount</td>
                    
                   
                  
                   

                

                </tr>
            }
       
            </tbody>
        </table>
    
    </div>


</div>

